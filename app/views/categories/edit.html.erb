<div class="row">
	<div class="span4">
		<section>
			<%= form_for(@category) do |f| %>
				<%= f.text_field :title, placeholder: "Enter a title..." %>
				<%= f.text_area :description, placeholder: "Enter a description or quote of the day..." %>
				<%= f.submit "Post", class: "btn btn-large btn_primary" %>
			<% end %>
		</section>
	</div>
</div>